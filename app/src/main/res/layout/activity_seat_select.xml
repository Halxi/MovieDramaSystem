<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/seat_select_movieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            android:text="Movie Name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/seat_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/seat_select_movieName"
            android:layout_below="@+id/seat_select_movieName"
            android:layout_marginTop="12dp"
            android:text="Session Time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/seat_select_movieVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/seat_select_time"
            android:layout_alignBottom="@+id/seat_select_time"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/seat_select_time"
            android:text="Version"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </RelativeLayout>

    <include
        layout="@layout/layout_seat_select"
        android:layout_width="match_parent"
        android:layout_height="420dp"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/seat_select_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Maximum Choose 3 Tickets Once"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/seat_select_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@color/text_yellow"
            android:text="Select Seat"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>