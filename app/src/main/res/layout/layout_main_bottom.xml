<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rg_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#e5f0f0f0"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingTop="6dp">

    <RadioButton
        android:id="@+id/rb_movie"
        style="@style/rb_bottom"
        android:checked="true"
        android:drawableTop="@drawable/bg_home"
        android:text="Movie" />

    <RadioButton
        android:id="@+id/rb_cinema"
        style="@style/rb_bottom"
        android:drawableTop="@drawable/bg_cinema"
        android:text="Cinema" />

    <RadioButton
        android:id="@+id/rb_discover"
        style="@style/rb_bottom"
        android:drawableTop="@drawable/bg_discover"
        android:text="Discover" />

    <RadioButton
        android:id="@+id/rb_mine"
        style="@style/rb_bottom"
        android:drawableTop="@drawable/bg_mine"
        android:text="Me" />


</RadioGroup>
