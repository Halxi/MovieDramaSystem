<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_buy_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_tv_buy"
            android:text="Buy"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/endTime"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="14dp"
            android:text="19:00"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/startTime"
            android:layout_below="@+id/tv_buy_ticket"
            android:text="21:00"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/endLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="End"
            android:textSize="16sp"
            android:layout_alignBaseline="@+id/endTime"
            android:layout_alignBottom="@+id/endTime"
            android:layout_toEndOf="@+id/endTime" />

        <TextView
            android:id="@+id/movieType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/startTime"
            android:layout_alignBottom="@+id/startTime"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/endLabel"
            android:text="English 3D"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/movieScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/endTime"
            android:layout_alignStart="@+id/movieType"
            android:text="Cinema 1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sessionPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_buy_ticket"
            android:layout_marginEnd="39dp"
            android:layout_toStartOf="@+id/tv_buy_ticket"
            android:text="23"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sessionPrice"
            android:layout_alignBottom="@+id/sessionPrice"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/sessionPrice"
            android:text="$"
            android:textSize="20sp" />

    </RelativeLayout>
</LinearLayout>